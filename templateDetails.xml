<extension version="3.0" type="template" client="site" method="upgrade">
	<name>light</name>
	<creationDate>2019-12-12</creationDate>
	<author>SPEDI srl</author>
	<authorEmail>sviluppo@spedi.it</authorEmail>
	<authorUrl>www.spedi.it</authorUrl>
	<copyright>2019</copyright>
	<license>GNU/GPL</license>
	<version>1.0.0</version>
	<description>TPL_LIGHT_DESC</description>
	<files><!-- no need to change -->
		<folder>css</folder>
		<folder>dist</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>libreries</folder>
		<folder>language</folder>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>index.php</filename>
		<filename>logic.php</filename>
		<filename>offline.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
		<filename>templateDetails.xml</filename>
	</files>
	<languages folder="language">
		<language tag="it-IT">it-IT/it-IT.tpl_light.ini</language>
		<language tag="it-IT">it-IT/it-IT.tpl_light.sys.ini</language>
	</languages>
	<positions>
		<!-- header position -->
		<position>htop</position>
		<position>overlay</position>
		<position>navbar</position>

		<!-- body position -->
		<position>hero</position>
		<position>breadcrumbs</position>
		<position>nav-component</position>
		<position>position-1</position>
		<position>position-2</position>

		<!-- footer position -->
		<position>footer-bottom</position>
		<position>footer-links</position>

		<!-- pos aside artile layout -->
		<position>article-aside</position>
		<position>article-top</position>
		<position>article-bottom</position>
	</positions>

	<config>
		<fields name="params">

			<fieldset name="advanced" addfieldpath="/administrator/components/com_menus/models/fields">
				<field
					name="logo"
					type="media"
					label="TPL_LIGHT_LOGO"
					description="TPL_LIGHT_LOGO_DESC"
				 />

				 <field
 					name="subtitle"
 					type="text"
 					label="TPL_LIGHT_SUBTITLE"
 					description="TPL_LIGHT_SUBTITLE_DESC"
 				 />

				 <!-- <field
 					name="address"
 					type="text"
 					label="TPL_LIGHT_ADDRESS"
 					description="TPL_LIGHT_ADDRESS_DESC"
 				 />

				 <field
 					name="phone"
 					type="text"
 					label="TPL_LIGHT_PHONE"
 					description="TPL_LIGHT_PHONE_DESC"
 				 />

				 <field
 					name="mail"
 					type="text"
 					label="TPL_LIGHT_MAIL"
 					description="TPL_LIGHT_MAIL_DESC"
 				 />

				 <field
 					name="piva"
 					type="text"
 					label="TPL_LIGHT_PIVA"
 					description="TPL_LIGHT_PIVA_DESC"
 				 /> -->

			</fieldset>

			<fieldset name="plugin" label="Plugins">

				<field
					name="aos"
					type="radio"
					default="0"
					label="TPL_LIGHT_AOS"
					description="TPL_LIGHT_AOS_DESC"
					class="btn-group btn-group-yesno">
				  <option value="1">JYES</option>
				  <option value="0">JNO</option>
				</field>

			</fieldset>

		</fields>
	</config>

</extension>
